dl.gallery
{
    margin: 2em 0;
    padding: 0;
    #font-family: georgia, times, serif;
}

.gallery dt
{
    position: relative;
    left: 0;
    top: 1.1em;
    width: 5em;
    font-weight: bold;
}

.gallery dd
{
    border-left: 1px solid #000;
    margin: 0 0 0 6em;
    padding: 0 0 .5em .5em;
}
